<span local-class="boundary">
  <input
    type="checkbox"
    checked={{@value}}
    local-class="input"
    ...attributes
    {{on "input" (pick "target.checked" @update)}}
  />

  <svg
    width="16"
    height="16"
    viewBox="0 0 16 16"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    local-class="svg"
  >
    <path
      d="M5 8.05299L6.99123 10L11 6"
      local-class="symbol"
      stroke-width="2"
    ></path>
  </svg>
</span>