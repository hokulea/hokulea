{
  "name": "@hokulea/ember-controls",
  "version": "0.0.0",
  "description": "The default blueprint for Embroider v2 addons.",
  "keywords": [
    "ember-addon"
  ],
  "author": "gossi",
  "files": [
    "addon-main.js",
    "dist"
  ],
  "scripts": {
    "build": "rollup --config",
    "lint": "concurrently -g 'npm:lint:*(!fix)'",
    "lint:fix": "concurrently -g 'npm:lint:*:fix'",
    "lint:css": "stylelint 'src/**/*.css' --allow-empty-input --cache",
    "lint:css:fix": "stylelint 'src/**/*.css' --allow-empty-input --fix",
    "lint:hbs": "ember-template-lint . --no-error-on-unmatched-pattern",
    "lint:hbs:fix": "ember-template-lint . --fix --no-error-on-unmatched-pattern",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "glint",
    "start": "rollup --config --watch"
  },
  "dependencies": {
    "@embroider/addon-shim": "^1.8.4",
    "ember-element-helper": "^0.6.1",
    "ember-modifier": "^4.1.0"
  },
  "peerDependencies": {
    "@glimmer/component": "^1.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/eslint-parser": "^7.21.3",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@babel/plugin-syntax-decorators": "^7.21.0",
    "@babel/plugin-transform-runtime": "^7.21.4",
    "@babel/plugin-transform-typescript": "^7.21.3",
    "@babel/preset-typescript": "^7.21.4",
    "@babel/runtime": "^7.21.0",
    "@embroider/addon-dev": "^3.0.0",
    "@glint/core": "^1.0.0-beta.4",
    "@glint/environment-ember-loose": "^1.0.0-beta.4",
    "@glint/environment-ember-template-imports": "^1.0.0-beta.4",
    "@glint/template": "^1.0.0-beta.4",
    "@glimmer/component": "^1.1.2",
    "@glimmer/tracking": "^1.1.2",
    "@hokulea/config-eslint": "*",
    "@hokulea/config-postcss": "*",
    "@hokulea/config-prettier": "*",
    "@hokulea/config-stylelint": "*",
    "@hokulea/config-targets": "*",
    "@hokulea/config-template-lint": "*",
    "@hokulea/config-typescript": "*",
    "@hokulea/ember-asset-loader": "*",
    "@hokulea/rollup-plugin-postcss": "*",
    "@types/css-modules": "^1.0.2",
    "concurrently": "^7.6.0",
    "ember-cli-htmlbars": "^6.2.0",
    "ember-source": "~4.11.0",
    "ember-template-imports": "^3.4.2",
    "ember-template-lint": "^5.7.2",
    "eslint": "^8.37.0",
    "postcss": "^8.4.21",
    "prettier": "^3.0.0",
    "rollup": "^3.20.2",
    "rollup-plugin-glimmer-template-tag": "^0.4.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-ts": "^3.2.0",
    "stylelint": "^15.10.2",
    "typescript": "~5.0.3",
    "webpack": "^5.77.0"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "version": 2,
    "type": "addon",
    "main": "addon-main.js",
    "app-js": {
      "./components/checkbox.js": "./dist/_app_/components/checkbox.js",
      "./components/control.d.js": "./dist/_app_/components/control.d.js",
      "./components/email-input.js": "./dist/_app_/components/email-input.js",
      "./components/input-builder.js": "./dist/_app_/components/input-builder.js",
      "./components/input-builder/input.js": "./dist/_app_/components/input-builder/input.js",
      "./components/list.js": "./dist/_app_/components/list.js",
      "./components/number-input.js": "./dist/_app_/components/number-input.js",
      "./components/radio.js": "./dist/_app_/components/radio.js",
      "./components/select.js": "./dist/_app_/components/select.js",
      "./components/text-area.js": "./dist/_app_/components/text-area.js",
      "./components/text-input.js": "./dist/_app_/components/text-input.js"
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.js"
    },
    "./addon-main.js": "./addon-main.js"
  },
  "volta": {
    "extends": "../../../package.json"
  }
}
