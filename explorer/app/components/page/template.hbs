<CenterLayout>
  <article {{did-insert this.setup}}>
    <header local-class="header">
      <h1>
        {{@title}}
      </h1>

      {{#if this.toc}}
        <nav local-class="toc">
          {{!-- <a href="#{{@slug}}" style="padding-left: var(--s1)">{{@title}}</a> --}}
          {{#each this.toc as |heading|}}
            <a href="#{{heading.slug}}" local-class="level-{{heading.lvl}}">
              {{heading.content}}
            </a>
          {{/each}}
        </nav>
      {{/if}}
    </header>
    {{yield}}
  </article>
</CenterLayout>