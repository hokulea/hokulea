{
  "extends": "../../configs/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "dummy/tests/*": [
        "tests/*"
      ],
      "dummy/*": [
        "tests/dummy/app/*",
        "app/*"
      ],
      "@hokulea/layouts": [
        "addon"
      ],
      "@hokulea/layouts/*": [
        "addon/*"
      ],
      "@hokulea/layouts/test-support": [
        "addon-test-support"
      ],
      "@hokulea/layouts/test-support/*": [
        "addon-test-support/*"
      ],
      "*": [
        "../../types/*",
        "types/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "addon/**/*",
    "tests/**/*",
    "types/**/*",
    "test-support/**/*",
    "addon-test-support/**/*"
  ],
  "exclude": [
    "**/stories.ts"
  ]
}
