{{#let (if @element @element (element "div")) as |Tag|}}
  <Tag class={{this.styles.primitiveBuilder}} ...attributes>
    {{yield
      (hash
        Content=this.contentComponent
        Affix=this.affixComponent
        Prefix=(component this.affixComponent class=this.styles.prefix)
        Suffix=(component this.affixComponent class=this.styles.suffix)
      )
    }}
  </Tag>
{{/let}}

{{! contentClass=this.styles.content
        affixClass=this.styles.affix
        prefixClass=this.styles.prefix
        suffixClass=this.styles.suffix }}