{{#let (if @element @element (element "div")) as |Tag|}}
  <Tag class={{this.styles.rowBuilder}} ...attributes>
    {{yield
      (hash
        Content=(component "row-builder/content")
        Affix=(component "row-builder/affix")
        Prefix=(component "row-builder/affix" class=this.styles.prefix)
        Suffix=(component "row-builder/affix" class=this.styles.suffix)
        contentClass=this.styles.content
        affixClass=this.styles.affix
        prefixClass=this.styles.prefix
        suffixClass=this.styles.suffix
      )
    }}
  </Tag>
{{/let}}