{{#let (if @element @element (element "div")) as |Tag|}}
  <Tag local-class="row-builder" ...attributes>
    {{yield
      (hash
        Content=(component "row-builder/content")
        Affix=(component "row-builder/affix")
        Prefix=(component "row-builder/affix" class=(local-class "prefix"))
        Suffix=(component "row-builder/affix" class=(local-class "suffix"))
        contentClass=(local-class "content")
        affixClass=(local-class "affix")
        prefixClass=(local-class "prefix")
        suffixClass=(local-class "suffix")
      )
    }}
  </Tag>
{{/let}}