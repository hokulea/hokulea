<ButtonBuilder
  local-class="button"
  data-intent={{this.intent}}
  data-importance={{this.importance}}
  data-test-button
  ...attributes as |builder|
>
  {{#if (has-block-params)}}
    {{yield builder}}
  {{else}}
    <builder.Content data-test-button-content>{{yield}}</builder.Content>
  {{/if}}
</ButtonBuilder>