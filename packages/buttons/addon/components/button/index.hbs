<ButtonBuilder local-class="button {{this.intent}}-{{this.importance}}" data-test-button
  data-test-button-intent={{this.intent}} data-test-button-importance={{this.importance}} ...attributes as |builder|>
  {{#if (has-block-params)}}
    {{yield builder}}
  {{else}}
    <builder.Content data-test-button-content>{{yield}}</builder.Content>
  {{/if}}
</ButtonBuilder>