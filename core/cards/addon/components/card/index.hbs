<BaseCard local-class="card" ...attributes>
  {{#if (has-block-params)}}
    {{yield
      (hash
        Header=(component "card/header")
        Content=(component "card/content")
        Footer=(component "card/footer")
      )
    }}
  {{else}}
    <Card::Content>
      {{yield}}
    </Card::Content>
  {{/if}}
</BaseCard>