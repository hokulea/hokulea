<div local-class="demo">
  <div>
    <b>
      Plain
    </b>

    <ul role="listbox" local-class="control" data-name="plain" {{control}}>
      {{#each this.items as |item|}}
        <li role="option">
          {{item}}
        </li>
      {{/each}}
    </ul>

    <b>
      With Actions passed in
    </b>

    <ul
      role="listbox"
      local-class="control"
      data-name="with-actions"
      {{control
        select=this.selectByIndices
        activateItem=this.activateItemByIndex
      }}
    >
      {{#each this.items as |item|}}
        <li role="option">
          {{item}}
        </li>
      {{/each}}
    </ul>

    <b>
      Full control from outside
    </b>

    <ul
      role="listbox"
      local-class="control"
      data-name="full-control"
      {{control
        items=this.items
        selection=this.selection
        activeItem=this.activeItem
        select=this.select
        activateItem=this.activateItem
      }}
    >
      {{#each this.items as |item|}}
        <li role="option">
          {{item}}
        </li>
      {{/each}}
    </ul>

    <h3>
      Multiselect
    </h3>

    <b>
      Plain
    </b>

    <ul
      role="listbox"
      local-class="control"
      aria-multiselectable="true"
      data-name="plain"
      {{control}}
    >
      {{#each this.items as |item|}}
        <li role="option">
          {{item}}
        </li>
      {{/each}}
    </ul>

    <b>
      With Actions passed in
    </b>

    <ul
      role="listbox"
      local-class="control"
      aria-multiselectable="true"
      data-name="with-actions"
      {{control
        select=this.selectByIndices
        activateItem=this.activateItemByIndex
      }}
    >
      {{#each this.items as |item|}}
        <li role="option">
          {{item}}
        </li>
      {{/each}}
    </ul>

    <b>
      Full control from outside (multiselect)
    </b>

    <ul
      role="listbox"
      local-class="control"
      aria-multiselectable="true"
      data-name="full-control"
      {{control
        items=this.items
        selection=this.selection
        activeItem=this.activeItem
        select=this.select
        activateItem=this.activateItem
      }}
    >
      {{#each this.items as |item|}}
        <li role="option">
          {{item}}
        </li>
      {{/each}}
    </ul>
  </div>

  <div local-class="manager">
    <p>
      Active Item:
      <b>
        {{this.activeItem}}
      </b>
    </p>

    Selection:
    <ul>
      {{#each this.selection as |item|}}
        <li>
          {{item}}
        </li>
      {{/each}}
    </ul>

    <p>
      Mutate Data
    </p>

    <ul>
      {{#each this.items as |item|}}
        <li>
          {{item}}
          <button type="button" {{on "click" (fn this.remove item)}}>
            remove
          </button>
        </li>
      {{/each}}
    </ul>

    <form {{on "submit" this.add}}>
      <input type="text" value={{this.value}} {{on "input" this.update}} />
      <button type="submit">
        Append
      </button>
    </form>
  </div>
</div>