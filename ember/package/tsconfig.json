{
  "extends": "@hokulea/config-typescript/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "declarationDir": "./declarations"
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "src/**/*.stories.ts"
  ],
  "glint": {
    "environment": [
      "ember-loose",
      "ember-template-imports"
    ]
  }
}