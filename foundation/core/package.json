{
  "name": "@hokulea/core",
  "version": "0.8.0",
  "description": "Hokulea generic core layer (CSS + JS)",
  "license": "MIT",
  "author": "Thomas Gossmann",
  "repository": "https://github.com/hokulea/hokulea",
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "exports": {
    "./index.css": "./dist/index.css",
    "./style.css": "./dist/style.css",
    "./*.module.css": {
      "types": "./src/css-module.d.ts",
      "import": "./dist/*.css.js",
      "require": "./dist/*.css.cjs"
    },
    "./*.css": "./src/*.css",
    "./package.json": "./package.json",
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.cjs"
    }
  },
  "scripts": {
    "build": "node ./scripts/build-css.js",
    "lint": "pnpm run '/^lint:(?!.*(fix)).*$/'",
    "lint:fix": "pnpm run '/^lint:[^:]*:fix/'",
    "lint:css": "stylelint 'src/**/*.css' --allow-empty-input --cache",
    "lint:css:fix": "stylelint 'src/**/*.css' --allow-empty-input --fix",
    "start": "chokidar 'src/**/*.css' -c 'pnpm css'"
  },
  "devDependencies": {
    "@gossi/config-eslint": "^1.3.1",
    "@gossi/config-prettier": "^1.1.1",
    "@gossi/config-stylelint": "^1.1.1",
    "chokidar-cli": "^3.0.0",
    "eslint": "^9.38.0",
    "lightningcss": "1.30.1",
    "prettier": "^3.6.2",
    "stylelint": "16.25.0"
  },
  "engines": {
    "node": "^20.11.0 || >=22"
  }
}
