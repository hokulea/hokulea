{
  // Extension: CSS Variable Autocomplete (by Vu Nguyen)
  "cssVariables.lookupFiles": [
    "foundation/tokens/src/tokens.css"
  ],
  // "stylelint.configFile": "configs/stylelint/index.js",
  "stylelint.configBasedir": "configs/stylelint/",
  "stylelint.packageManager": "pnpm",
  "stylelint.validate": [
    "css",
    "postcss"
  ],
  "stylelint.snippet": [
    "css",
    "postcss"
  ],
  "eslint.format.enable": true,
  "eslint.useESLintClass": true,
  "eslint.probe": [
    "javascript",
    "typescript",
    "html",
    "markdown",
    "glimmer-ts"
  ],
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
